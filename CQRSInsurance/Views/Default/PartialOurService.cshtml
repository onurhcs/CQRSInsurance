@model CQRSInsurance.Models.IndexViewModel

@{
    ViewData["Title"] = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Başlık Başlangıç -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Hizmetlerimiz</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="index.html">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="#">Sayfalar</a></li>
            <li class="breadcrumb-item active text-primary">Hizmetler</li>
        </ol>
    </div>
</div>
<!-- Başlık Bitiş -->
<!-- Hizmetler Başlangıç -->
<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Hizmetlerimiz</h4>
            <h1 class="display-4 mb-4">En İyi Sigorta Hizmetlerini Sunuyoruz</h1>
            <p class="mb-0">
                Sigortacılık alanında uzman ekibimizle, ihtiyaçlarınıza en uygun çözümleri sunarak, hayatınızı güvence altına alıyoruz.
            </p>
        </div>
        <div class="row g-4 justify-content-center">
            @foreach (var item in Model.Services)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">

                    <div class="service-item">

                        <div class="service-img">
                            <img src="@item.Image" class="img-fluid rounded-top w-100" alt="Hayat Sigortası">
                            <div class="service-icon p-3">
                                <i class="fa fa-users fa-2x"></i>
                            </div>
                        </div>
                        <div class="service-content p-4">
                            <div class="service-content-inner">
                                <a href="#" class="d-inline-block h4 mb-4">@item.Title</a>
                                <p class="mb-4">@item.Description</p>
                                <a class="btn btn-primary rounded-pill py-2 px-4" href="#">@item.ButtonText</a>
                            </div>
                        </div>

                    </div>

                </div>
            }
            <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
                <a class="btn btn-primary rounded-pill py-3 px-5" href="#">Tüm Hizmetlerimiz</a>
            </div>
        </div>
    </div>
</div>
<!-- Hizmetler Bitiş -->

<div class="container-fluid testimonial pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Müşteri Yorumları</h4>
            <h1 class="display-4 mb-4">Bizi Tercih Edenler Ne Diyor?</h1>
            <p class="mb-0">
                Hizmetlerimizden yararlanan müşterilerimizin deneyimlerini keşfedin.
                Kaliteli hizmet anlayışımız ve müşteri memnuniyetine verdiğimiz önemle ilgili
                gerçek yorumları aşağıda bulabilirsiniz.
            </p>
        </div>


        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.2s">
            @foreach (var testimonial in Model.Testimonials)
            {
                <div class="testimonial-item bg-light rounded">
                    <div class="row g-0">
                        <div class="col-4 col-lg-4 col-xl-3">
                            <div class="h-100">
                                <img src="@testimonial.Image" class="img-fluid h-100 rounded" style="object-fit: cover;" alt="Müşteri Yorumu">
                            </div>
                        </div>
                        <div class="col-8 col-lg-8 col-xl-9">
                            <div class="d-flex flex-column my-auto text-start p-4">
                                <h4 class="text-dark mb-0">@testimonial.CustomerName</h4>
                                <p class="mb-3">@testimonial.JobTitle</p>
                                <div class="d-flex text-primary mb-3">
                                    @for (int i = 0; i < testimonial.Rating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                </div>
                                <p class="mb-0">@testimonial.Comment</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
