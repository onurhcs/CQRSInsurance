@model CQRSInsurance.Models.IndexViewModel

@{
    ViewData["Title"] = "PartialAbouts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">Hakkımızda</h4>
        <ol class="breadcrumb d-flex justify-content-center mb-0 wow fadeInDown" data-wow-delay="0.3s">
            <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
            <li class="breadcrumb-item"><a href="#">Sayfalar</a></li>
            <li class="breadcrumb-item active text-primary">Hakkımızda</li>
        </ol>
    </div>
</div>


<!-- Feature Start -->
<div class="container-fluid feature bg-light py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Özelliklerimiz</h4>
            <h1 class="display-4 mb-4">Sigorta Size Daha İyi Bir Gelecek Sağlar</h1>
            <p class="mb-0">Sigorta hizmetlerimizle hayatınızı güvence altına alın. Aileniz, işiniz ve geleceğiniz için en uygun çözümleri sunuyoruz.</p>
        </div>
        <div class="row g-4">
            @foreach (var feature in Model.Features)
            {
                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.2s">

                    <div class="feature-item p-4 pt-0">

                        <div class="feature-icon p-4 mb-4">
                            <i class="@feature.Icon"></i>
                        </div>
                        <h4 class="mb-4">@feature.Title</h4>
                        <p class="mb-4">@feature.Description</p>
                        <a class="btn btn-primary rounded-pill py-2 px-4" href="#">@feature.ButtonText</a>

                    </div>

                </div>
            }
        </div>
    </div>
</div>
<!-- Feature End -->
<!-- FAQs Start -->
<div class="container-fluid faq-section bg-light py-5">
    <div class="container pb-5">
        <div class="row g-5 align-items-center">
            <!-- Soru Bölümü -->
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="h-100">
                    <div class="mb-5 text-center">
                        <h4 class="text-primary text-uppercase fw-bold">Sıkça Sorulan Sorular</h4>
                        <h1 class="display-5 fw-semibold">Sigorta Hizmetlerimiz Hakkında Merak Ettikleriniz</h1>
                        <p class="text-muted">Size en iyi hizmeti sunabilmek için sıkça sorulan sorularınızı yanıtladık.</p>
                    </div>
                    <div class="accordion shadow-lg rounded" id="faqAccordion">
                        @foreach (var item in Model.Faqs)
                        {
                            string collapseId = "collapse-" + item.FaqId;
                            string headingId = "heading-" + item.FaqId;

                            <div class="accordion-item border-0">
                                <h2 class="accordion-header" id="@headingId">
                                    <button class="accordion-button shadow-sm fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                        <i class="@item.Icon me-2"></i> @item.Question
                                    </button>
                                </h2>
                                <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body bg-white text-muted">
                                        @item.Answer
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Görsel Bölümü -->
            <div class="col-xl-6 wow fadeInRight text-center" data-wow-delay="0.4s">
                <img src="~/Sigorta/img/carousel-2.png" class="img-fluid w-75 rounded shadow-lg" alt="Sigorta Hizmetleri">
            </div>
        </div>
    </div>
</div>

<!-- FAQs End -->

