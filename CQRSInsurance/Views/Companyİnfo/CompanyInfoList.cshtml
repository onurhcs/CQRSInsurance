@model List<CQRSInsurance.CQRSDesignPattern.Results.CompanyInfoResults.GetCompanyInfoQueryResult>

@{
    ViewData["Title"] = "CompanyInfoList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Buton Metni</th>
            <th>Buton Linki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ButtonText</td>
                <td>@item.ButtonLink</td>
                <td>
                    <a href="/CompanyInfo/DeleteCompanyInfo/@item.CompanyInfoId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/CompanyInfo/UpdateCompanyInfo/@item.CompanyInfoId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/CompanyInfos/CreateCompanyInfo/" class="btn btn-info">Yeni Özellik Ekle</a>

