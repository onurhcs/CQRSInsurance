@model List<CQRSInsurance.CQRSDesignPattern.Results.FeatureResults.GetFeatureQueryResult>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Buton Metni</th>
            <th>Buton Linki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FeatureId</td>
                

                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.ButtonText</td>
                <td>@item.ButtonLink</td>
                <td>
                    <a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Features/CreateFeature/" class="btn btn-info">Yeni Özellik Ekle</a>