@model List<CQRSInsurance.CQRSDesignPattern.Results.ServiceResults.GetServiceQueryResult>

@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Image</th>
            <th>Buton Metni</th>
            <th>Buton Linki</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceId</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <img src="@item.Image" alt="Hizmet Görseli" class="img-fluid rounded"
                         style="width: 100px; height: auto;">
                </td>
                <td>@item.ButtonText</td>
                <td>@item.ButtonLink</td>
                <td>
                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Services/CreateService/" class="btn btn-info">Yeni Özellik Ekle</a>